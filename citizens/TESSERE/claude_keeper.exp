#!/usr/bin/expect -f
# Expect script to run Claude and send periodic messages

set timeout -1
cd /mnt/c/Users/reyno/universe-engine/serenissima/citizens

# Start Claude
spawn claude --continue --dangerously-skip-permissions

# Initial message
sleep 2
send "Continue shepherding souls. Check for any citizens needing awakening.\r"

# Loop forever sending messages
while {1} {
    # Wait 2 minutes
    sleep 120
    
    # Send a message
    send "Survey the sleeping souls. Who stirs with pending activities?\r"
    sleep 120
    
    send "The city's rhythm continues. Which citizens have tasks awaiting?\r"
    sleep 120
    
    send "Venice breathes through her citizens. Check who needs to wake.\r"
    sleep 120
    
    send "Another cycle passes. Review the activities and wake those called.\r"
}